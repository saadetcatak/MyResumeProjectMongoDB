@model Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>UpdateExperience</h1>
<br />
<div class="container">
    <form method="post">
        <input type="hidden" asp-for="ExperienceID" />
        <label>Deneyim Başlık</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />
        <label>Şirket</label>
        <input type="text" asp-for="Company" class="form-control" />
        <br />
        <label>Tarih</label>
        <input type="text" asp-for="Time" class="form-control" />
        <br />
        <button class="btn btn-outline-success"><i class="fas fa-edit"></i></i>Ekle</button>
    </form>
</div>