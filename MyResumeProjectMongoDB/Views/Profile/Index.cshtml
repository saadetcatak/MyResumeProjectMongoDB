@model List< Profile>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>İsim</th>
            <th>Başlık 1</th>
            <th>Başlık 2</th>
            <th>Görsel</th>
            <th>Sil</th>
            <th>Detay</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.NameSurname</td>
                <td>@item.Title1</td>
                <td>@item.Title2</td>
                <td><img src="@item.ImageUrl" style="height:75px;width:75px;border-radius:50%" /></td>
                <td>
                    <a asp-action="DeleteProfile" asp-route-id="@item.ProfileID" class="btn btn-outline-danger"><i class="fas fa-trash"></i>Sil</a>
                </td>
                <td>
                    <a asp-action="ProfileDetail" asp-route-id="@item.ProfileID" class="btn btn-outline-success"><i class="fas fa-pen"></i>Profil Detay</a>
                </td>


            </tr>
        }
    </table>
    <a asp-action="CreateProfile" class="btn btn-outline-info"><i class="fas fa-plus-circle"></i>Yeni Profil Ekle</a>

</div>