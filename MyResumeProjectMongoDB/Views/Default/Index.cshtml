@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


@await Component.InvokeAsync("_ProfileComponentPartial")


<div class="container-xxl py-6" id="about">
    <div class="container">
        <div class="row g-5">

            @await Component.InvokeAsync("_AboutComponentPartial")

            @await Component.InvokeAsync("_ProjectDetailComponentPartial")

        </div>
    </div>
</div>

<div class="container-xxl py-6 pb-5" id="skill">
    <div class="container">
        <div class="row g-5">

            @await Component.InvokeAsync("_SkillComponentPartial")

            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <ul class="nav nav-pills rounded border border-2 border-primary mb-5">
                    <li class="nav-item w-50">
                        <button class="nav-link w-100 py-3 fs-5 active" data-bs-toggle="pill" href="#tab-1">Experience</button>
                    </li>
                    <li class="nav-item w-50">
                        <button class="nav-link w-100 py-3 fs-5" data-bs-toggle="pill" href="#tab-2">Education</button>
                    </li>
                </ul>
                <div class="tab-content">
                    @await Component.InvokeAsync("_ExperienceComponentPartial")

                    @await Component.InvokeAsync("_EducationComponentPartial")

                </div>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("_ServiceComponentPartial")

@await Component.InvokeAsync("_MyProjectComponentPartial")

@await Component.InvokeAsync("_TestimonialComponentPartial")





<div class="container-xxl pb-5" id="contact">
    <div class="container py-5">
        <div class="row g-5 mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="col-lg-6">
                <h1 class="display-5 mb-0">Let's Work Together</h1>
            </div>
            <div class="col-lg-6 text-lg-end">
                <a class="btn btn-primary py-3 px-5" href="">Say Hello</a>
            </div>
        </div>
        <div class="row g-5">
            @await Component.InvokeAsync("_ContactInfoComponentPartial")
            <div class="col-lg-7 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <p class="mb-4">The contact form is currently inactive. Get a functional and working contact form with Ajax & PHP in a few minutes. Just copy and paste the files, add a little code and you're done. <a href="https://htmlcodex.com/contact-form">Download Now</a>.</p>

                @await Html.PartialAsync("~/Views/Default/SendMessage.cshtml")

            </div>
        </div>
    </div>
</div>


<!-- Contact End -->
