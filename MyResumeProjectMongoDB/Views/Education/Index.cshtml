@model List<Education>

@{
    Layout = null;
    int count = 0;
}

<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Eğitim ID</th>
            <th>Eğitim Başlık</th>
            <th>Tarih</th>
            <th>Okul</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.EducationID</td>
                <td>@item.Title</td>
                <td>@item.Time</td>
                <td>@item.School</td>
                <td><a href="/Education/EducationCategory/@item.EducationID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Education/EducationCategory/@item.EducationID" class="btn btn-outline-success">Güncelle</a></td>


            </tr>
        }

    </table>
    <a href="/Education/CreateEducation" class="btn btn-outline-success">Yeni Eğitim Girişi</a>
</div>