@model List<Education>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Eğitim ID</th>
            <th>Eğitim Başlık</th>
            <th>Okul</th>
            <th>Tarih</th>         
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.EducationID</td>
                <td>@item.Title</td>               
                <td>@item.School</td>
                <td>@item.Time</td>
                <td>
                    <a asp-action="DeleteEducation" asp-route-id="@item.EducationID" class="btn btn-outline-danger"><i class="fas fa-trash"></i>Sil</a>
                </td>
                <td>
                    <a asp-action="UpdateEducation" asp-route-id="@item.EducationID" class="btn btn-outline-success"><i class="fas fa-pen"></i>Güncelle</a>
                </td>


            </tr>
        }

    </table>
    <a href="/Education/CreateEducation" class="btn btn-outline-success">Yeni Eğitim Girişi</a>
</div>